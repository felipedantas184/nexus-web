{
  "name": "nexus-cloud-functions",
  "version": "1.0.0",
  "description": "Cloud Functions para Nexus Platform",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "clean": "rimraf lib",
    "prebuild": "npm run clean"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^5.1.1",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/node-cron": "^3.0.8",
    "firebase-functions-test": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  },
  "private": true
}